        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="216" Width="156">
    <Grid>
        <TextBlock x:Name="DebugText" HorizontalAlignment="Center" VerticalAlignment="Top" TextAlignment="Right" Foreground="Red" FontWeight="Bold" Margin="0,10,0,0" FontSize="8">Debug Text</TextBlock>
        <CheckBox x:Name="cb_MouseAccel" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 50,0,0" Checked="RadioButton_Checked" Unchecked="RadioButton_Checked" IsChecked="False">Mouse Acceleration</CheckBox>
